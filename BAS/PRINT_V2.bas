   15 IF K=83 THEN Y=Y+1 : GOTO 20:REM S
   16 IF K=68 THEN X=X+1 : GOTO 20:REM D
   17 IF K=65 THEN X=X-1 : GOTO 20:REM A
   18 IF K=81 THEN GOTO 27 :REM Q TO ROTAE      REM Print the array using PRINT TAB
   19 GOTO 13
   20 CLS
   21 FOR XA=0 TO 9
   22 FOR YA=0 TO 9
   23 IF ARRAY$(XA,YA)=BL$ THEN PRINTTAB(XA,YA)ARRAY$(XA,YA)
   24 NEXT YA : NEXT XA
   26 PRINTTAB(X,Y)BL$ : PRINTTAB(20,20)X Y : GOTO 13
