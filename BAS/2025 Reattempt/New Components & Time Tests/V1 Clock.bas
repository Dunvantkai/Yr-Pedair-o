   10 MODE 7
   20 LEAVE=FALSE
   30 NBL$=" "
   40 BL$=CHR$(255)
   50 X=0 : Y=0 : T%=0  : Z=0 : AMSER=0
   60 REPEAT
   70 K%=INKEY(0)
   80 IF K%=122 OR K%=90 THEN PRINTTAB(X,Y);NBL$:X=X-1:PRINTTAB(X,Y);BL$    :REM Z/z
   90 IF K%=120 OR K%=88 THEN PRINTTAB(X,Y);NBL$:X=X+1:PRINTTAB(X,Y);BL$
  100 IF K%=111 OR K%=79 THEN PRINTTAB(X,Y);NBL$:Y=Y-1:PRINTTAB(X,Y);BL$
  110 IF K%=112 OR K%=80 THEN PRINTTAB(X,Y);NBL$:Y=Y+1:PRINTTAB(X,Y);BL$
  120 IF K%=76 OR K%=108 THEN LEAVE=TRUE :REM TO LEAVE
  130 Z=Z+1:IF Z>=15 THEN PRINTTAB(X,Y);NBL$:Y=Y+1:PRINTTAB(X,Y);BL$ : Z=0 : AMSER=AMSER+1
  140 PRINTTAB(20,20);AMSER
  150 REPEAT UNTIL TIME>=T%+5
  160 UNTIL LEAVE
